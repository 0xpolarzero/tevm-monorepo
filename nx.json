{
  "defaultProject": "@evmts/playground",
  "npmScope": "evmts",
  "implicitDependencies": {
    "package.json": "*",
    "tsconfig.json": "*",
    "nx.json": "*"
  },
  "targetDefaults": {
    "test": {
      "dependsOn": ["^build", "nx:pretest"]
    },
    "test:watch": {
      "dependsOn": ["^build"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "serve": {
      "dependsOn": ["build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/.vitepress"]
    },
    "dev": {
      "dependsOn": ["^build"]
    },
    "start:devnet": {}
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": ["build", "test:coverage"],
        "accessToken": "MWI0MzBiNGItMzE0Ni00MGU3LWIxZGQtY2Q2ZDlmMDIzOTMwfHJlYWQ="
      }
    }
  },
  "affected": {
    "defaultBase": "main"
  }
}
